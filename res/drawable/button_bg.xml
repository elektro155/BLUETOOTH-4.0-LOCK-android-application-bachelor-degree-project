<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="@dimen/button_corner_round"
                android:bottomRightRadius="@dimen/button_corner_round"
                android:bottomLeftRadius="@dimen/button_corner_round"
                android:topRightRadius="@dimen/button_corner_round" />
            <solid android:color="@color/buttonPressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="@dimen/button_corner_round"
                android:bottomRightRadius="@dimen/button_corner_round"
                android:bottomLeftRadius="@dimen/button_corner_round"
                android:topRightRadius="@dimen/button_corner_round" />
            <solid android:color="@color/button" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="@dimen/button_corner_round"
                android:bottomRightRadius="@dimen/button_corner_round"
                android:bottomLeftRadius="@dimen/button_corner_round"
                android:topRightRadius="@dimen/button_corner_round" />
            <solid android:color="@color/button" />
        </shape>
    </item>
</selector>